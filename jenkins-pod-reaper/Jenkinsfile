node {
    checkout scm
 
    docker.withRegistry('https://registry.linuxlab.sh', 'jenkins-linuxlab') {

        stage('Create Docker Image') {
            dir('jenkins-pod-reaper') {
                def Img = docker.build("jenkins-pod-reaper:${env.BUILD_NUMBER}")
                Img.push()
                Img.push("latest")
            }
        }
    }
}
